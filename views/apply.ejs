<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Application</title>
</head>
<body>
    <h1>Application</h1>
    <form action="/processApplication" method="post" id="form">
        <fieldset>
            <label><strong>Name: </strong><input type="text" name="name" required></label>
            <label><strong>Email Address: </strong><input type="text" name="email" required></label><br><br>
            <label><strong>GPA: </strong><input type="text" name="gpa" required></label><br><br>
            <strong>Background Information:</strong><br>
            <textarea rows="8" cols="100" name="info"></textarea>
        </fieldset>
        <br><input type="reset">
        <input type="submit" value="Submit Application" onclick="return message()">
    </form>
    <hr>
    <%- homeURL %>
    <script>
        function message() {
            let f = document.querySelector("#form");
            if (confirm("Are you sure you want to submit your application?\nYou will not be able to change your information once submitted")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
</body>
</html>